// new module script
int plant1 = 3;
int plant2 = 3;
int plant3 = 3;
int plant4 = 3;


   static int Plants::getPlantHealth(int whichPlant)
   {
      switch(whichPlant)
      {
        case 1:
        return plant1;
        break;
        case 2:
        return plant2;
        break;
        case 3:
        return plant3;
        break;
        case 4:
        return plant4;
        break;
      }
   }
  
  
   static void Plants::waterPlant(int whichPlant)
   {
      switch(whichPlant)
      {
        case 1:
        plant1 = 3;
        break;
        case 2:
        plant2 = 3;
        break;
        case 3:
        plant3 = 3;
        break;
        case 4:
        plant4 = 3;
        break;
      }
   }
  
int counter = 0;
  
   static void Plants::plantTime()
   {
      if(counter < 24)
     {
       counter++;
     } else {
      if(plant1)
      {
        plant1--;
      } 
      if(plant2)
      {
        plant2--;
      } 
      if(plant3)
      {
        plant3--;
      } 
      if(plant4)
      {
        plant4--;
      }
      counter = 0;
     }
   }