function unRedOtherButtons()
{
  for (int i = 0; i < 7; i++)
  {
    gVendingPanel.Controls[i].AsButton.NormalGraphic = 3907;
    gVendingPanel.Controls[i].AsButton.PushedGraphic = 3908;
  }
  buttonsCleared = true;
}

