function on_mouse_click(MouseButton button)
{ 
  if(button == eMouseLeft)
  {
    if(Mouse.Mode == eModeWalkto)
    {
      if(GetLocationType(mouse.x, mouse.y) ==eLocationNothing)
      {
        if(Region.GetAtScreenXY(mouse.x, mouse.y) == region[15])
        {
          player.GoTo(Game.Camera.X + mouse.x, 197); 
          ClaimEvent();
          
        } else if(Region.GetAtScreenXY(mouse.x, mouse.y) == region[14]
          ||      Region.GetAtScreenXY(mouse.x, mouse.y) == region[8]        
        )
        {        
          player.GoTo( Game.Camera.X + mouse.x + 30,  Screen.Width - mouse.x + 15);
          ClaimEvent();
        } else if (Region.GetAtScreenXY(mouse.x, mouse.y) == region[13])
        {
          player.GoTo(204, 250);
          ClaimEvent();
        }
      }
    }
  }
}
