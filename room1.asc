bool scrollAllowed = true;

function doScroll()
{
  float timing = 2.5;
  
  if(player.DestinationY < 218) //main top part of hall
  {
    Game.Camera.StopAllTweens();
    Game.Camera.TweenPosition(timing, player.DestinationX - 180, 60, eEaseInOutSineTween, eNoBlockTween);
  } else { //lower part of hall
    Game.Camera.TweenPosition(timing, 100, 120, eEaseInOutSineTween, eNoBlockTween);
  }
  
  SetTimerWithSeconds(16, timing);
  scrollAllowed = false;
}




function resetScroll()
{
  if(!scrollAllowed)
  {
    if(IsTimerExpired(16))
    {
      scrollAllowed = true;
    }
  }
}

function hallScrollRep()
{
 
  int lBoundry = Game.Camera.X + 60;
  int rBoundry = Game.Camera.X + 300;
  int tBoundry = Game.Camera.Y + 100;
  int bBoundry = Game.Camera.Y + 150;
  if(scrollAllowed && characterChange == false)
  {
    if( player.x < lBoundry    
    ||  player.x > rBoundry 
    
    ||  player.y < tBoundry 
    ||  (player.y > bBoundry && player.x < 379 && Game.Camera.Y != 120)
  
    )
    {
      doScroll();      
    }
  }  
  
}





