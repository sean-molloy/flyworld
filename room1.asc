function buzz()
{
  int maxBuzz = SlVolSound.Value;
  if(maxBuzz)
  {        
    int newVolume = maxBuzz - (player.distanceToCharacter(cFlies)-100);
    if(cFlies.Moving == false)
    {
    flyBuzz.Volume = 0;
    } else {
    
      if(newVolume > 0)
      {
        if(newVolume > 100)
        {
          flyBuzz.Volume = maxBuzz;
        } else {        
          flyBuzz.Volume = newVolume;
        }
      } else {
        flyBuzz.Volume = 0;// was 1
      }
    }        
  } else {
    if(flyBuzz.Volume > 0)
    {
      flyBuzz.Volume = 0;
    }
  }
}

