// room script file

function room_AfterFadeIn()
{
   bBlackOut.TweenTransparency(0.8, 100, eEaseInCircTween, eNoBlock);
  oHand.TweenPosition(1.8, 133, 200, eEaseOutSineTween, eBlockTween);
  WaitSeconds(1.0);
  player.ChangeRoom(311);
}

function positionScreen()
{
  oScreen.X = oHand.X + 7;
  oScreen.Y = oHand.Y - 142;
}

int counter = 0;
function blinkScreen()
{
  counter++;
  if(counter >30)
  {
    if(oScreen.Visible)
    {
      oScreen.Visible = false;
    } else {
      oScreen.Visible = true;
    }
    counter = 0;
  }
}

function late_repeatedly_execute_always()
{
  blinkScreen();
  positionScreen();
}