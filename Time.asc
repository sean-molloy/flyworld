function checkTime()
{
  String minutesPrint;
  String amOrPm;
  int hourPrint;
  if(gameMinute < 10)
  {
    minutesPrint = String.Format("0%d",gameMinute);
  } else {
    minutesPrint = String.Format("%d",gameMinute);
  }
  
  if(gameHour > 12)
  {
    hourPrint = gameHour - 12;
    amOrPm = "pm";
  } else {
    hourPrint = gameHour;
    amOrPm = "am";
  }
    
  Display("Day %d: %s, %d:%s %s",gameDay, whatDay(),  hourPrint, minutesPrint, amOrPm);
}