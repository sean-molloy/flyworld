    }    
  break;
  case 5://fourletters
    fuckAnyone();
  break;
  case 6://take
    cantTake();
  break;
  case 7://inv
    if(player.ActiveInventory == iTypewriter)
    {
      oTypewriter.Visible = true;
      player.LoseInventory(iTypewriter);
    } else {
      wontWork();
    }
  break;
}
verbUsed = 0;

}

