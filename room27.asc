function positionBlink()
{
  oBlink.X = oLEyes.X + 7;
  oBlink.Y = oLEyes.Y - 1;
}

int blinkDuration  = 8;
int blinkCounter = 0;

int dryEyes = 40;
function blink()
{
  if(blinkingAllowed)
  {
    blinkCounter++;
    if(blinkCounter == dryEyes)
    {
      
      oBlink.Visible = true;
    } else if (blinkCounter == dryEyes + blinkDuration)
    {
      oBlink.Visible = false;
      dryEyes = 30 + Random(60);
      blinkCounter = 0;     
    }
  }
}

function turnOffBlink()
{
  blinkingAllowed = false;
  oBlink.Visible = false;
}


