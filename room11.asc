function region1_WalksOnto()
{
  player.ChangeRoom(eRooms_Omni_CorridorLeft, player.x + 250, player.y);
}

function room_Load()
{
  Time.setSky(oSunsetSky, oNightSky, oDaySky);
 resumeMusicAfterCHCH(aEndlessOffice);
 changePlayerLocaleOnRoomEnter();
 player.PlaceOnWalkableArea();
  if(characterChange)
  {
   characterChange = false;    
  }
 if(Game.DoOnceOnly("playthemusiconstart"))
 {
  playMusic(aEndlessOffice);
 }
  
 
}



function hHotspot1_AnyClick()
{
  int fff = 4;
  Display("The time is %s! It's %s", Time.checkTime(), Time.whatWeekday());
  Display("in %d days it will be %s!",fff, Time.thisManySleepsTill(fff));
}

function room_RepExec()
{
  Time.changeSky(oDaySky, oSunsetSky, oNightSky);
}
