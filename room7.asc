function setCameraPos()
{
  if(player.PreviousRoom == 1)
  {
    if(player.x < 333)
    {
      Game.Camera.SetSize(288, 160);      
      Game.Camera.X = 160;
      Game.Camera.Y = 26;    
      loadPos = 1;
    } else {
      loadPos = 2;
    }
    
  }
}

