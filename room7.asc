function disableSkipWalk()
{
  if(player.InRect(472, 116, 549, 140))
  {       
    if(skippingWalking)
    {
      zSkipWalking();
    }
    if(allowSkipWalk)
    {
      allowSkipWalk = false;
    }
    
  } else {
    if(!allowSkipWalk)
    {
      allowSkipWalk = true;
    }
  }
}

function room_RepExec()
{
  disableSkipWalk();
  
}
