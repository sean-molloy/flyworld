// room script file
bool allowBlink = false;
int counter = 0;

int dryEyes = 30;
function jonBlink()
{
  counter++;
  if(counter == dryEyes)
  {
    oBlink.Visible = true;
    
  } else if (counter == dryEyes + 5)
  {
    oBlink.Visible = false;
    dryEyes = 70 + Random(100);
    counter = 0;
  }
}



