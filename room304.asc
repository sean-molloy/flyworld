function moveJaw()
{
 
 
  if(
    cJohnsMouth.Frame == 6 ||
    cJohnsMouth.Frame == 7 ||
    cJohnsMouth.Frame == 8 ||
    cJohnsMouth.Frame == 9 
  )
  {    
    
    oJaw.Y = 204;
    
  } else if(cJohnsMouth.Frame == 11)
  {
      
      oJaw.Y = 206;
  } else {
    oJaw.Y = -4000;
 
  }
 
}
int counter = 0;

int dryEyes = 70;
function jonBlink()
{
  counter++;
  if(counter == dryEyes)
  {
    oBlink.Visible = true;
    
  } else if (counter == dryEyes + 8)
  {
    oBlink.Visible = false;
    dryEyes = 70 + Random(100);
    counter = 0;
  }
}

function late_repeatedly_execute_always()
{
  moveJaw();
  jonBlink();
  raiseBrows();
  lowerBrows();
}

