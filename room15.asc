function hLiftButton_AnyClick()
{

  switch (verbUsed)
  {
    case 0: //walk
      walkToAndFace(248, 173, eDirectionLeft, 260, 174); 
    break;
    case 1://look
      player.FaceLocation(240, 176, eBlock);
      lookAbiPaul("It's the controls for the lift.", "The elevator's buttons.");
    break;
    case 2://use
      pushLiftButton();
    break;
    case 3://talk
      Canned.noTalking();
    break;
    case 4://move
      pushLiftButton();
    break;
    case 5://fourletters
      Canned.fuckAnyone();
    break;
    case 6://take
      Canned.cantTake();
    break;
    case 7://inv
      Canned.wontWork();
    break;
  }
  verbUsed = 0;

}


function on_key_press (eKeyCode keycode)
{
  if(gLiftPanel.Visible)
  {
    if(keycode == eKeyEscape)
    {
      OmniElevator.HidePanel();
      ClaimEvent();
    }
  }
}