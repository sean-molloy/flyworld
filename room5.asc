// room script file

function region1_WalksOnto()
{
  characterChange = false;
  Game.Camera.StopAllTweens();
  HandyHelper.memorizeCamPos();
  player.ChangeRoom(eRooms_FlatHallway);
}

function room_Load()
{
  
  changePlayerLocaleOnRoomEnter();
  resumeMusicAfterCHCH(aFlat_theme);
  if(characterChange)
  {
    characterChange = false;   
    Game.Camera.SetAt(0, 32);
  } else {
    Game.Camera.SetAt(HandyHelper.recallCamX(), HandyHelper.recallCamY());
  }
  Phone.adjustPhoneVolumeWhilstRinging();
  Follow.followStand(237, 169);
  Follow.followFrom(267,  178, 1);
}


function room_AfterFadeIn()
{
  Game.Camera.TweenPosition(1.7, 0, 32, eEaseInOutSineTween, eNoBlockTween);
  Follow.followMe(4);
  

}

function hAbisBed_AnyClick()
{
  player.ChangeRoom(303);
}
