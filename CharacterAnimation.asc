// Script for all character animations
// Or other global animation scripting

function angry(this Character*)
{
  this.SpeechView = this.GetProperty("angryView");
}

function cool(this Character*)
{
  this.SpeechView = this.GetProperty("normalSpeechView");
}

function awkward(this Character*)
{
  this.SpeechView = this.GetProperty("awkwardView");
}

function hamishFaceAbi()
{
    if(player.x < 173)
    {
      hamishView = 75;
      hamishTalkView = 76;
     
    } else {
      hamishView = 71;
      hamishTalkView = 73;   
    }    
}

function hamishTurn()
{
  if(cHamish.NormalView == 68)
  {
    hamishFaceAbi();
    hamishFacingScreen = false;
    cHamish.SetProperty("normalSpeechView", hamishTalkView);
    cHamish.SetProperty("awkwardView", 71);  
    cHamish.SetProperty("angryView",72);
    
    cHamish.LockView(69, eStopMoving);
    cHamish.Animate(0, 3, eOnce, eBlock, eForwards, 0);
    cHamish.UnlockView(eStopMoving);
    
    cHamish.ChangeView(hamishView);   
    cHamish.cool();
    
  } else {
    cHamish.SetProperty("normalSpeechView", 68);
    cHamish.SetProperty("awkwardView", 68);  
    cHamish.SetProperty("angryView",68);
    
    cHamish.LockView(69, eStopMoving);
    cHamish.Animate(0, 3, eOnce, eBlock, eBackwards, 4);
    cHamish.UnlockView(eStopMoving);
    
    cHamish.ChangeView(68);   
    cHamish.cool();
    hamishFacingScreen = true;
  }
}

function sayToIt(String sayAbi, String sayPaul)
{
  String sayWhat;
  if(IsPlayerAbi)
  {
    sayWhat = sayAbi;
  } else {
    sayWhat = sayPaul;
  }
  if(player.x  < 174)
  {
    player.SayAt(50, 70, 140,  sayWhat);
  } else {
    player.SayAt(170, 70, 140,  sayWhat);
  }
  
}